{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true
  },
  "exclude": ["node_modules", "dist", "types"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
