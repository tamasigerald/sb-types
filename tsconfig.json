{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "dist", "types"],
  "include": ["**/*.ts", "**/*.tsx"]
}
